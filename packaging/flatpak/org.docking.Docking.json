{
  "app-id": "org.docking.Docking",
  "runtime": "org.gnome.Platform",
  "runtime-version": "46",
  "sdk": "org.gnome.Sdk",
  "command": "docking",
  "build-options": {
    "build-args": [
      "--share=network"
    ]
  },
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=x11",
    "--socket=fallback-x11",
    "--device=dri",
    "--filesystem=host",
    "--talk-name=org.freedesktop.Notifications",
    "--system-talk-name=org.freedesktop.NetworkManager"
  ],
  "modules": [
    {
      "name": "docking",
      "buildsystem": "simple",
      "build-commands": [
        "python3 -m ensurepip --upgrade || true",
        "python3 -m pip install --prefix=/app --no-build-isolation --no-deps \"openmeteo-requests>=1.2\" \"requests-cache>=1.0\" \"retry-requests>=2.0\"",
        "python3 -m pip install --prefix=/app --no-build-isolation --no-deps .",
        "install -Dm644 packaging/deb/org.docking.Docking.desktop /app/share/applications/org.docking.Docking.desktop",
        "install -Dm644 packaging/flatpak/org.docking.Docking.metainfo.xml /app/share/metainfo/org.docking.Docking.metainfo.xml",
        "install -Dm644 packaging/flatpak/hicolor.index.theme /app/share/icons/hicolor/index.theme",
        "for size in 16 24 32 48 64 128 256 512; do install -Dm644 \"packaging/deb/icons/hicolor/${size}x${size}/apps/org.docking.Docking.png\" \"/app/share/icons/hicolor/${size}x${size}/apps/org.docking.Docking.png\"; install -Dm644 \"packaging/deb/icons/hicolor/${size}x${size}/apps/org.docking.Docking.png\" \"/app/share/icons/hicolor/${size}x${size}/apps/org.docking.docking.png\"; done",
        "install -Dm644 packaging/deb/icons/hicolor/symbolic/apps/org.docking.Docking-symbolic.svg /app/share/icons/hicolor/symbolic/apps/org.docking.Docking-symbolic.svg",
        "install -Dm644 packaging/deb/icons/hicolor/symbolic/apps/org.docking.Docking-symbolic.svg /app/share/icons/hicolor/symbolic/apps/org.docking.docking-symbolic.svg"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "../.."
        }
      ]
    }
  ]
}
